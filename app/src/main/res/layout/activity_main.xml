    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingBottom="@dimen/activity_vertical_margin"

            tools:context=".MainActivity">


            <city.stage.com.twinhearts.AdjustableImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/mainmenu"
                android:adjustViewBounds="true"

                />


            <TextView
                android:text="MEDITATE NOW >"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/meditate_now"
                android:background="@drawable/textlines"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:textStyle="bold"


                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="MEDITASI BAHASA INDONESIA >"
                android:id="@+id/meditasi_BI"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="@drawable/textlines2"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ASK FOR BLESSING >"
                android:background="@drawable/textlines2"
                android:id="@+id/ask_blessing"
                android:paddingLeft="10dp"
                android:gravity="center_vertical|left"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="GROUP MEDITATION >"
                android:background="@drawable/textlines2"
                android:id="@+id/group_meditasi"
                android:gravity="center_vertical|left"
                android:paddingLeft="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="LEARN PRANIC HEALING >"
                android:background="@drawable/textlines2"
                android:id="@+id/learn_ph"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="INBOX >"
                android:background="@drawable/textlines2"
                android:id="@+id/inbox"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CONTACT US >"
                android:background="@drawable/textlines2"
                android:id="@+id/contact_us"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>
