<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <city.stage.com.twinhearts.AdjustableImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/learn_ph2"
        android:adjustViewBounds="true"
        android:id="@+id/image_contact"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OUR OFFICES :"
        android:textColor="#000"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solo"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="#000"
            android:id="@+id/tv_contact_solo"
            android:onClick="callSolo"
            android:text="Jl.Urip Sumoharjo 91\n
57129 Solo\n
Tel.: +62-271-652828"
            android:gravity="center_horizontal" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jabodetabek"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:textColor="#000"
            android:id="@+id/tv_contact_jakarta"
            android:onClick="callJakarta"

            android:text="Pranic Healing Center\n
Bintaro Jaya Sektor 9 Ruko AO2\n
Belakang McDonald\n
Bintaro Tangerang\n
Telp : +62 21 22210269\n"
            android:gravity="center_horizontal" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="loveprana@hotmail.com"
        android:gravity="center_horizontal"
        android:textColor="#000"
        android:onClick="email"
        android:id="@+id/tv_email_contact"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="www.indonesiapranichealing.org"
        android:gravity="center_horizontal"
        android:textColor="#000"
        android:onClick="openURL"
        android:id="@+id/tv_web_contact"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"/>





</LinearLayout>
    </ScrollView>