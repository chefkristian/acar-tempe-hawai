<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="10dp"
                android:text="FREE BLESSINGS" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="If you or your loved ones currently facing challanges in life, energy blessing can help to put the path on ease. All you have to do is to provide us with this information:" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"
                android:text="1.Full Name   2.Recent photograph     3.Challanges" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=" (it can be a health, relationship, financial related, others or confidential) It will be blessed together in a group meditation." />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:gravity="center_horizontal"
                android:text="Jika anda atau anggota keluarga/teman anda sedang menghadapi tantangan dalam hidup, berkat energi dapat membantu meringankan. Kirimkan informasi berikut ini:" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:gravity="center_horizontal"
                android:text="1. Nama lengkap   2.Foto terbaru  3.Tantangan" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="(bisa dari segi kesehatan, hubungan, keuangan, lainnya atau rahasia). Berkat energi akan disalurkan bersama setelah meditasi grup." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="To Submit Your Information, Please Sign Up"
                android:gravity="center_horizontal"
                android:textAppearance="?android:attr/textAppearanceMedium" />


            <com.facebook.login.widget.LoginButton
                android:id="@+id/button_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:text="Login Facebook"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:id="@+id/nama_profile"
               android:textAppearance="?android:attr/textAppearanceMedium"/>


            <com.facebook.login.widget.ProfilePictureView
                android:id="@+id/profil_image"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:layout_centerInParent="true"></com.facebook.login.widget.ProfilePictureView>
            <!--facebook:preset_size="small"/>-->


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:gravity="top|left"
                android:maxLines="10"
                android:scrollbars="vertical"
                android:ems="10"
                android:id="@+id/info"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_weight="1"-->
                <!--android:orientation="vertical">-->


                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="200dp"
                    android:id="@+id/gambar_upload" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:gravity="right">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/upload_icon"
                        android:id="@+id/button_upload" />

                    <!--<ImageView-->
                        <!--android:layout_width="50dp"-->
                        <!--android:layout_height="50dp"-->
                        <!--android:src="@drawable/camera_icon"-->
                        <!--android:id="@+id/button_camera" />-->
                    <!--</LinearLayout>-->
                </LinearLayout>


            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:layout_gravity="center_horizontal"
                android:id="@+id/button_submit" />


        </LinearLayout>
    </RelativeLayout>
</ScrollView>