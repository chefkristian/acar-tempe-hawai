<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="When a group of 10 peoples meditating together, the Divine energy downpour is 100 times more than 1 person meditating alone. That's why a group meditation is encouraged!"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="10dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Pada saat 10 orang bermeditasi bersama, maka energi Ilahi yang turun 100 kali lebih besar dibandingkan 1 orang bermeditasi sendiri. Oleh sebab itu marilah kita meditasi bersama! "/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:text="JOIN TWIN HEARTS GROUP MEDITATION EVERY WEDNESDAY AT 6 PM"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="MARI BERGABUNG DENGAN GRUP MEDITASI JANTUNG KEMBAR SETIAP RABU JAM 6 SORE"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingTop="15dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Come to Our Center"
                android:id="@+id/button_come"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Streaming"
                android:id="@+id/button_streaming"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>