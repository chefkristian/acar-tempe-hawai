<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
   >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="TWIN HEARTS MEDITATION"
        android:id="@+id/twinheart"
       android:textAppearance="?android:attr/textAppearanceLarge"
        android:gravity="center_horizontal"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Grand Master Choa Kok Sui"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/twinheart"
        android:gravity="center_horizontal"
        android:id="@+id/gmcks" />
<ImageView
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_below="@+id/gmcks"
    android:id="@+id/gbr_meditasi"/>



    <SeekBar
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:layout_marginBottom="50dp"
       android:layout_below="@+id/gbr_meditasi"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/start_time"
        android:layout_above="@+id/seekBar"
        android:layout_alignParentLeft="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/end_time"
        android:layout_above="@+id/seekBar"
        android:layout_alignParentRight="true"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_below="@+id/seekBar"
    android:gravity="center_horizontal"

    >



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pause"
        android:id="@+id/button_pause"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"


       />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/button_play"
        android:layout_marginBottom="20dp"



         />

</LinearLayout>
</RelativeLayout>